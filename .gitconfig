[user]
	email = contact@alexandre-hublau.com
	name = xandermann
[branch]
	autosetupmerge = always

[credential]
  helper = xandermann
[core]
  editor = vim -c start
  excludesfile = ~/.gitignore_global

[alias]
  s = status
  aa = add .
  cm = commit -a
  amend = commit --amend
  p = push

  undo = git reset --soft HEAD^
  who = shortlog -sne
  oneline = log --pretty=oneline --abbrev-commit --graph --decorate


[diff]
compactionHeuristic = true
